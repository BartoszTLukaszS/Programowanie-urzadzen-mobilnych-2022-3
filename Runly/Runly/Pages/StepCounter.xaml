<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Runly.Pages.StepCounter" 
             BackgroundColor="#f8feec" >
    <ContentPage.Content>
        <StackLayout>
            <Grid VerticalOptions="CenterAndExpand">
                <Image Grid.Row="0" Source="icon_steps.png" 
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand" 
                       HeightRequest="200" 
                       Margin="25" />
                <Label Grid.Row="1" 
                       x:Name="amountSteps"
                       Text="Kroki"
                       TextColor="#192126" 
                       FontSize="30" 
                       FontAttributes="Bold"
                       HorizontalOptions="CenterAndExpand" 
                       Margin="25"   />
            </Grid>
            <Button x:Name="btn" Clicked="Button_Cliked" Text="Start" CornerRadius="5" BorderWidth="0" Clicked="StartTraining" BackgroundColor="#bbf247" FontAttributes="Bold" TextColor="#000" HeightRequest="70" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>